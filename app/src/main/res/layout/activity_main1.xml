<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"

    >
    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/imageView"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:src="@drawable/background_main_leader"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"

        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"

            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_Menu"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:drawableTop="@drawable/cutlery"
                android:background="@drawable/login_item"
                android:text="MENU"
                android:textColor="#FFFF"
                android:textAlignment="center"
                />

            <Button
                android:id="@+id/btn_Table"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_marginLeft="10dp"

                android:background="@drawable/login_item"
                android:drawableTop="@drawable/salver"
                android:text="Table"
                android:textColor="#FFFF" />

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_Employee"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:background="@drawable/login_item"
                android:drawableTop="@drawable/waiter"
                android:text="STAFF"
                android:textAlignment="center"
                android:textColor="#FFFF" />

            <Button
                android:id="@+id/btn_statistics"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/login_item"
                android:drawableTop="@drawable/profits"

                android:text="STATISTICS"
                android:textColor="#FFFF" />

        </LinearLayout>
    </LinearLayout>

</FrameLayout>
